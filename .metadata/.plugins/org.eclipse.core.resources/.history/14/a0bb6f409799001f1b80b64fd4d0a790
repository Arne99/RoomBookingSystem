package suncertify.db;

import java.io.DataInput;
import java.io.IOException;

public class DataFileFormatReader {

    private final int expectedMagicCookie;
    private final int dataFormatIdentifierBlockLength;

    public DataFileFormatReader(int dataFormatIdentifier,
	    int dataFormatIdentifierBlockLength) {
	super();
	this.expectedMagicCookie = dataFormatIdentifier;
	this.dataFormatIdentifierBlockLength = dataFormatIdentifierBlockLength;
    }

    public DataFileFormat extractDataFileFormat(DataInput input)
	    throws IOException, InvalidDataFormatException {

	if (expectedMagicCookie != input.readInt()) {
	    throw new InvalidDataFormatException();
	}

	int recordLength = input.readInt();
	int numberOfFields = input.readShort();

	DataFileFormat formatInformation = new DataFileFormat(recordLength,
		numberOfFields, dataFormatIdentifierBlockLength);

	return formatInformation;
    }
}
